<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a1a1a1"
        android:id="@+id/main_button_indicator"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/main_button_card_layout_dark"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/colorDeepPurpleDark"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/main_button_card_layout"

            app:cardBackgroundColor="@color/colorDeepPurple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            >

            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/main_button_card_name_text_shadow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ts_np"
                        android:text="ชื่อ"
                        android:textSize="60dp"
                        />

                    <TextView
                        android:id="@+id/main_button_card_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ts_som_np"
                        android:textColor="@color/colorWhite"
                        android:text="ชื่อ"

                        android:textSize="60dp"
                        />

                </RelativeLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>







    </androidx.cardview.widget.CardView>


</RelativeLayout>