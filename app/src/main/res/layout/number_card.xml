<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/number_card_main"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >

    <androidx.cardview.widget.CardView
        android:id="@+id/number_card_layout"

        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/colorDeepPurple"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/number_card_star"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_star"
                android:tint="@color/colorAmber"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                />

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/number_card_text_A"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ts_np"
                    android:text="ชื่อ"
                    android:textSize="60dp"
                    />


                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/number_card_text_B"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingBottom="20dp"
                    android:fontFamily="@font/ts_som_np"
                    android:textColor="@color/colorWhite"
                    android:text="ชื่อ"
                    android:textSize="60dp"


                    />

            </RelativeLayout>

        </RelativeLayout>





    </androidx.cardview.widget.CardView>


</RelativeLayout>