<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/dialog_add_layout"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/dialog_add_text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/ts_som_np"
        android:paddingTop="0dp"
        android:textColor="@color/facebookColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ชื่อ"
        android:textSize="46dp"
        android:layout_margin="16dp"
        />

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#EDEDED"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        >

        <EditText
            android:theme="@style/Facebook"
            android:id="@+id/custom_dialog_edittext"
            android:fontFamily="@font/ts_som_np"
            android:paddingLeft="20dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:text=""
            android:textColor="#6c6c6c"
            android:textSize="36dp"
            android:hint=""
            android:inputType="textPersonName" />
        <requestFocus />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="right"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/dialog_add_cancel"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_height="50dp"
            >
            <TextView
                android:fontFamily="@font/ts_som_np"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ยกเลิก"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/dialog_add_confirm"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_height="50dp"
            >
            <TextView
                android:fontFamily="@font/ts_som_np"
                android:textColor="@color/facebookColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ยืนยัน"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>